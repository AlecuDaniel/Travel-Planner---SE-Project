<link rel="stylesheet" href="~/css/general.css" />
<link rel="stylesheet" href="~/css/sign-up.css" />

<section class="section-sign-up container margin-bottom-md">
    <div class="sign-up-container">
        <div class="sign-up-group">
            <span class="sign-up-input-label">First Name</span>
            <input type="text" class="sign-up-input-box" />
        </div>
        <div class="sign-up-group">
            <span class="sign-up-input-label">Last Name</span>
            <input type="text" class="sign-up-input-box" />
        </div>
        <div class="sign-up-group">
            <span class="sign-up-input-label">Email</span>
            <input type="text" class="sign-up-input-box" />
        </div>
        <div class="sign-up-group">
            <span class="sign-up-input-label">Password</span>
            <input type="password" class="sign-up-input-box" />
            <div class="sign-up-group">
                <form>
                    <button type="submit" class="sign-up-button">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
</section>
