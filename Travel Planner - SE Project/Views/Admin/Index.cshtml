@model IEnumerable<Travel_Planner___SE_Project.Models.Destination>

@{
    ViewData["Title"] = "Destinations";
}

<h1>Destinations</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Destination</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Description</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var destination in Model)
        {
            <tr>
                <td>@destination.Name</td>
                <td>@destination.Country</td>
                <td>@destination.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(destination.ImageUrl))
                    {
                        <img src="@destination.ImageUrl" alt="Image" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@destination.DestinationId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@destination.DestinationId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
