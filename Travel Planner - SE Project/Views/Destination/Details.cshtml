@model Travel_Planner___SE_Project.Models.Destination

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Name);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/general.css" />
<link rel="stylesheet" href="~/css/contact.css" />

<div style="display: flex; align-items: center; gap: 10px;">
    <h1 style="margin: 0;">@Html.DisplayFor(model => model.Name)</h1>
    <span>
        <a asp-controller="Admin" asp-action="Edit" asp-route-id="@Model?.DestinationId" class="btn btn-sm btn-outline-primary">Edit</a>
    </span>
</div>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <div class="mt-3">
        <img src="/img/@Model.ImageUrl" alt="Destination Image" style="max-width: 100%; height: auto;" />
    </div>
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>
</div>