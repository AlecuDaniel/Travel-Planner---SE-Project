@{
}

<link rel="stylesheet" href="~/css/general.css" />
<link rel="stylesheet" href="~/css/contact.css" />

<section class="section-contact container grid grid--2--cols">
    <div class="message-us-container">
        <div class="message-us">
            <ion-icon name="create-outline" class="message-us-icon"></ion-icon>
            <span class="message-us-title">Message us!</span>
        </div>
        <div class="input-group">
            <span class="input-label">Name</span>
            <input type="text" class="name-input"/>
        </div>
        <div class="input-group">
            <span class="input-label">Email</span>
            <input type="email" class="email-input" />
        </div>
        <div class="input-group">
            <span class="input-label">Message</span>
            <textarea class="message-text"></textarea>
        </div>
        <form>
            <button type="submit" class="submit-button">Submit</button>
        </form>
    </div>
    <div class="contact-info-container">
        <div class="contact-info">
            <ion-icon name="call-outline" class="contact-info-icon"></ion-icon>
            <span class="contact-info-title">Contact info</span>
        </div>
        <div class="contact-container">
            <span class="street">Street: Bulevardul Decebal</span>
            <span class="city">City: Craiova</span>
            <span class="zip-code">Zip Code: 20575</span>
            <span class="phone-number">Phone Number: 443-498-7166</span>
            <span class="email">Email: randomemail@gmail.com</span>
        </div>
        <div class="contact-icons">
            <ion-icon name="logo-facebook" class="contact-icon"></ion-icon>
            <ion-icon name="logo-instagram" class="contact-icon"></ion-icon>
            <ion-icon name="logo-twitter" class="contact-icon"></ion-icon>
            <ion-icon name="logo-youtube" class="contact-icon"></ion-icon>
        </div>
    </div>
</section>